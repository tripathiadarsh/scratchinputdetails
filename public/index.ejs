<body>
    <form  >
    <div class="container">
        <div class="row para-desc d-block mx-auto">
            <div class="form-group">
                <input class="form-control" type="number" id="number"  placeholder="">
        
            </div>
       
            <div class="form-group">
              <button type="submit" id="btnsubmit" value="Submit" class="btn btn-block btn-primary py-3">Submit</button>
            </div>

        </div>
    </div>
    </form>
   
    <script>
        $("#btnsubmit").on('click', function(e){
          e.preventDefault();
          try {
          var number = $("#number").val();
        //   var givenNumber = "23456";
          
          var t = {};
          t['number'] = number;
              $.ajax({
                  method : "POST",
                  url : '/validate',
                  data: t,
                  success: function(res) {
                      console.log(res);
                      $('input[type="number"]').val('');
                  }
              });
          } catch (e) {

          }
        })
    </script>
</body>
</html>